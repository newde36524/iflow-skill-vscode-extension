{
  "name": "iflow-extension",
  "publisher": "zsk",
  "icon": "logo.png",
  "displayName": "iFlow Skill Manager",
  "description": "Manage iFlow skills for your projects",
  "version": "0.1.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "iflow.generateSkill",
        "title": "Generate Skill for Current Project",
        "icon": "$(add)"
      },
      {
        "command": "iflow.refreshSkills",
        "title": "Refresh Skills",
        "icon": "$(refresh)"
      },
      {
        "command": "iflow.showAllSkills",
        "title": "Show All Skills",
        "icon": "$(files)"
      },
      {
        "command": "iflow.clearSkills",
        "title": "Clear Skills List",
        "icon": "$(clear-all)"
      },
      {
        "command": "iflow.openTerminal",
        "title": "Open iFlow Terminal",
        "icon": "$(terminal)"
      },
      {
        "command": "iflow.checkSyncStatus",
        "title": "Check Sync Status",
        "icon": "$(sync)"
      },
      {
        "command": "iflow.syncFromGlobal",
        "title": "Sync from Global",
        "icon": "$(cloud-download)"
      },
      {
        "command": "iflow.viewSkillDetail",
        "title": "View Skill Details",
        "icon": "$(info)"
      },
      {
        "command": "iflow.editSkill",
        "title": "Edit Skill",
        "icon": "$(edit)"
      },
      {
        "command": "iflow.saveSkill",
        "title": "Save and Import Skill",
        "icon": "$(save)"
      },
      {
        "command": "iflow.deleteSkill",
        "title": "Delete Skill",
        "icon": "$(trash)"
      },
      {
        "command": "iflow.install",
        "title": "Install iFlow",
        "icon": "$(download)"
      },
      {"command": "iflow.searchSkills", "title": "Search Skills Online", "icon": "$(search)"}
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "iflowContainer",
          "title": "iFlow",
          "icon": "./atm.gif"
        }
      ]
    },
    "views": {
      "iflowContainer": [
        {
          "id": "iflowSkillsView",
          "name": "Skills"
        }
      ]
    },
    "configuration": {
      "title": "iFlow",
      "properties": {
        "iflow.skillDataSource": {
          "type": "string",
          "default": "github",
          "enum": [
            "github",
            "skillmap"
          ],
          "enumDescriptions": [
            "Search skills from GitHub repositories",
            "Search skills from SkillMap marketplace (https://skillmaps.net/market)"
          ],
          "description": "Data source for searching skills online",
          "markdownDescription": "Data source for searching skills online:\n- **GitHub**: Search skills from GitHub repositories\n- **SkillMap**: Search skills from [SkillMap marketplace](https://skillmaps.net/market) (verified skills)"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "iflow.generateSkill",
          "when": "view == iflowSkillsView",
          "group": "navigation"
        },
        {
          "command": "iflow.refreshSkills",
          "when": "view == iflowSkillsView",
          "group": "navigation"
        },
        {
          "command": "iflow.clearSkills",
          "when": "view == iflowSkillsView",
          "group": "navigation"
        },
        {
          "command": "iflow.openTerminal",
          "when": "view == iflowSkillsView",
          "group": "navigation"
        },
        {
          "command": "iflow.showAllSkills",
          "when": "view == iflowSkillsView",
          "group": "navigation"
        },
        {
          "command": "iflow.install",
          "when": "view == iflowSkillsView",
          "group": "navigation"
        },
        {
          "command": "iflow.searchSkills",
          "when": "view == iflowSkillsView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "iflow.checkSyncStatus",
          "when": "view == iflowSkillsView && viewItem == skill",
          "group": "management@1"
        },
        {
          "command": "iflow.syncFromGlobal",
          "when": "view == iflowSkillsView && viewItem == skill",
          "group": "management@2"
        },
        {
          "command": "iflow.viewSkillDetail",
          "when": "view == iflowSkillsView && viewItem == skill",
          "group": "management@3"
        },
        {
          "command": "iflow.editSkill",
          "when": "view == iflowSkillsView && viewItem == skill",
          "group": "inline"
        },
        {
          "command": "iflow.deleteSkill",
          "when": "view == iflowSkillsView && viewItem == skill",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "markdown-it": "^14.1.0"
  }
}