{
  "name": "iflow-extension",
  "publisher": "zsk",
  "icon": "logo.png",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "0.4.0",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "iflow.generateSkill",
        "title": "%iflow.generateSkill.title%",
        "icon": "$(add)"
      },
      {
        "command": "iflow.refreshSkills",
        "title": "%iflow.refreshSkills.title%",
        "icon": "$(refresh)"
      },
      {
        "command": "iflow.showAllSkills",
        "title": "%iflow.showAllSkills.title%",
        "icon": "$(files)"
      },
      {
        "command": "iflow.clearSkills",
        "title": "%iflow.clearSkills.title%",
        "icon": "$(clear-all)"
      },
      {
        "command": "iflow.openTerminal",
        "title": "%iflow.openTerminal.title%",
        "icon": "$(terminal)"
      },
      {
        "command": "iflow.viewSkillDetail",
        "title": "%iflow.viewSkillDetail.title%",
        "icon": "$(info)"
      },
      {
        "command": "iflow.editSkill",
        "title": "%iflow.editSkill.title%",
        "icon": "$(edit)"
      },
      {
        "command": "iflow.saveSkill",
        "title": "%iflow.saveSkill.title%",
        "icon": "$(save)"
      },
      {
        "command": "iflow.deleteSkill",
        "title": "%iflow.deleteSkill.title%",
        "icon": "$(trash)"
      },
      {
        "command": "iflow.importToGlobal",
        "title": "%iflow.importToGlobal.title%",
        "icon": "$(cloud-download)"
      },
      {
        "command": "iflow.install",
        "title": "%iflow.install.title%",
        "icon": "$(download)"
      },
      {
        "command": "iflow.searchSkills",
        "title": "%iflow.searchSkills.title%",
        "icon": "$(search)"
      },
      {
        "command": "iflow.createFile",
        "title": "%iflow.createFile.title%",
        "icon": "$(new-file)"
      },
      {
        "command": "iflow.createFolder",
        "title": "%iflow.createFolder.title%",
        "icon": "$(new-folder)"
      },
      {
        "command": "iflow.copyFile",
        "title": "%iflow.copyFile.title%",
        "icon": "$(copy)"
      },
      {
        "command": "iflow.deleteFile",
        "title": "%iflow.deleteFile.title%",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "iflowContainer",
          "title": "iFlow",
          "icon": "./atm.gif"
        }
      ]
    },
    "views": {
      "iflowContainer": [
        {
          "id": "iflowSkillsView",
          "name": "Skills"
        }
      ]
    },
    "configuration": {
      "title": "iFlow",
      "properties": {
        "iflow.skillDataSource": {
          "type": "string",
          "default": "github",
          "enum": [
            "github",
            "skillmap"
          ],
          "enumDescriptions": [
            "Search skills from GitHub repositories",
            "Search skills from SkillMap marketplace (https://skillmaps.net/market)"
          ],
          "description": "Data source for searching skills online",
          "markdownDescription": "Data source for searching skills online:\n- **GitHub**: Search skills from GitHub repositories\n- **SkillMap**: Search skills from [SkillMap marketplace](https://skillmaps.net/market) (verified skills)"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "iflow.generateSkill",
          "when": "view == iflowSkillsView",
          "group": "navigation"
        },
        {
          "command": "iflow.refreshSkills",
          "when": "view == iflowSkillsView",
          "group": "navigation"
        },
        {
          "command": "iflow.clearSkills",
          "when": "view == iflowSkillsView",
          "group": "navigation"
        },
        {
          "command": "iflow.openTerminal",
          "when": "view == iflowSkillsView",
          "group": "navigation"
        },
        {
          "command": "iflow.showAllSkills",
          "when": "view == iflowSkillsView",
          "group": "navigation"
        },
        {
          "command": "iflow.install",
          "when": "view == iflowSkillsView",
          "group": "navigation"
        },
        {
          "command": "iflow.searchSkills",
          "when": "view == iflowSkillsView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "iflow.viewSkillDetail",
          "when": "view == iflowSkillsView && (viewItem == skill || viewItem == global-skill || viewItem == project-skill)",
          "group": "management@1"
        },
        {
          "command": "iflow.importToGlobal",
          "when": "view == iflowSkillsView && viewItem == project-skill",
          "group": "management@2"
        },
        {
          "command": "iflow.editSkill",
          "when": "view == iflowSkillsView && (viewItem == skill || viewItem == global-skill || viewItem == project-skill)",
          "group": "inline"
        },
        {
          "command": "iflow.deleteSkill",
          "when": "view == iflowSkillsView && (viewItem == skill || viewItem == global-skill || viewItem == project-skill)",
          "group": "inline"
        },
        {
          "command": "iflow.createFile",
          "when": "view == iflowSkillsView && viewItem == folder",
          "group": "filemanagement@1"
        },
        {
          "command": "iflow.createFolder",
          "when": "view == iflowSkillsView && viewItem == folder",
          "group": "filemanagement@2"
        },
        {
          "command": "iflow.copyFile",
          "when": "view == iflowSkillsView && viewItem == file",
          "group": "filemanagement@1"
        },
        {
          "command": "iflow.deleteFile",
          "when": "view == iflowSkillsView && (viewItem == file || viewItem == folder)",
          "group": "filemanagement@2"
        },
        {
          "command": "iflow.deleteFile",
          "when": "view == iflowSkillsView && viewItem == folder",
          "group": "filemanagement@3"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "cheerio": "^1.2.0",
    "markdown-it": "^14.1.0"
  }
}
